	ORG	&C000

	; 8 bit division
	; NUMBER1 = NUMBER1 / NUMBER2
	; ANS = REMAINDER
DIV	JSR	DIVID
	LDA	QUOT
	STA	ANSWERS+2
	JSR	DIVID
	LDA	QUOT
	STA	ANSWERS+1
	JSR	DIVID
	LDA	QUOT
	STA	ANSWERS
	;RTS
	INC	&D020
	JMP	4	; back to pds

DIVID	LDA	#0
	ASL	NUMBER1
	LDX	#8
LOOP	ROL	A
	CMP	#10
	BCC	SKIP
	SBC	#10
SKIP	ROL	NUMBER1
	DEX
	BNE	LOOP
	STA	QUOT
	RTS
	

NUMBER1	DB	&FF
QUOT	DB	0

	; upto 999 (well 255 anyway)
ANSWERS	DB	0,0,0

	SEND	COMPUTER1
	END	DIV

	
